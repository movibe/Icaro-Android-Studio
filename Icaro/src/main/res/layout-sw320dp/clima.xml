<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/layout_clima">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="24ยบ"
        android:id="@+id/t_Temperatura"
        android:textSize="90dp"
        android:layout_alignBottom="@+id/image_iconoClima"
        android:layout_toRightOf="@+id/image_iconoClima"
        android:layout_alignParentEnd="false"
        android:gravity="center"
        android:textIsSelectable="false"
        android:typeface="normal"
        android:textColor="#017E90" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nubosidad Parcial"
        android:id="@+id/t_EstadoClima"
        android:textSize="30dp"
        android:layout_below="@+id/t_Temperatura"
        android:layout_centerHorizontal="true"
        android:textColor="#18545C"
        android:gravity="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_iconoClima"
        android:minHeight="150dp"
        android:minWidth="150dp"
        android:maxWidth="150dp"
        android:maxHeight="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="La Serena"
        android:id="@+id/t_Ciudad"
        android:singleLine="false"
        android:textSize="30dp"
        android:layout_above="@+id/t_Pais"
        android:layout_centerHorizontal="true"
        android:textColor="#1F99AA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chile"
        android:id="@+id/t_Pais"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="#00464F" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12ยบ"
        android:id="@+id/t_Min"
        android:textSize="20dp"
        android:textColor="#00464F"
        android:layout_below="@+id/t_TempMin"
        android:layout_alignLeft="@+id/t_TempMin"
        android:layout_alignRight="@+id/t_TempMin"
        android:gravity="center"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30ยบ"
        android:id="@+id/t_Max"
        android:textSize="20dp"
        android:textColor="#00464F"
        android:layout_below="@+id/t_TempMax"
        android:layout_alignLeft="@+id/t_TempMax"
        android:layout_alignRight="@+id/t_TempMax"
        android:gravity="center"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60%"
        android:id="@+id/t_Humedad"
        android:textSize="20dp"
        android:textColor="#00464F"
        android:layout_below="@+id/t_Hum"
        android:layout_alignRight="@+id/t_Hum"
        android:layout_alignLeft="@+id/t_Hum"
        android:gravity="center"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/min"
        android:id="@+id/t_TempMin"
        android:textSize="20dp"
        android:textColor="#016D7C"
        android:layout_below="@+id/t_EstadoClima"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/max"
        android:id="@+id/t_TempMax"
        android:textSize="20dp"
        android:textColor="#016D7C"
        android:layout_below="@+id/t_EstadoClima"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/humedad"
        android:id="@+id/t_Hum"
        android:textSize="20dp"
        android:textColor="#016D7C"
        android:layout_below="@+id/t_EstadoClima"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="45dp" />

</RelativeLayout>